<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicalCoordinationApplication.ForgotPassword"
             Title="ForgotPassword">
    <VerticalStackLayout
        Spacing="0"
        Padding="0,0">

        <Grid ColumnDefinitions="50, *" ColumnSpacing="5">
            <Button
                Grid.Column="0"
                ImageSource="back_arrow.png"
                HorizontalOptions="Center"
                BackgroundColor="Transparent"
            />
            <Label 
                Grid.Column="1"
                VerticalOptions="Center" 
                FontSize="Title" 
                Text="Forgot Password"
            />
        </Grid>
        <VerticalStackLayout
            Spacing="50"
            Padding="20, 0">
            <Label 
                HorizontalOptions="Start"
                VerticalOptions="Center" 
                Text="Please fill in your email and we'll send you a link to reset your password."
            />
            <Entry 
                x:Name="EmailENT"
                Placeholder="Email Address"
            />
            <Button 
                Text="Send Password Reset Link"
                HorizontalOptions="Center"
                CornerRadius="0"
            />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>